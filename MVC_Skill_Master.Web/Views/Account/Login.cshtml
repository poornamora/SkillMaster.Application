@model MVC_Skill_Master.Web.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    @* cdn *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
   
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <link rel="stylesheet" href="~/css/ValidationsStyles/StyleLogin.css">

</head>
<body>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>


    <div>@ViewBag.Message</div>
    <div class="container mt-3">
        <div class="row justify-content-center">
            
            <div class="col-md-4">
                <div class="Logincontainer">
                    @* <form id="loginForm" method="post" class="card p-1">  *@
                    <div method="post" class="card p-1" action="/Account/Login">
                    
                        <h1 class="text-center mb-4">Login</h1>
                        <div class="mb-3">
                            <label for="email" class="form-label"><b>Email</b></label>
                            <input type="email" name="Email" placeholder="Enter Email" class="form-control" id="id-email">
                            <span id="emailicon"></span>
                            <span id="error" class="text-danger"></span>

                        </div>
                        <br />
                        <div class="mb-3">
                            <label for="password" class="form-label"><b>Password</b></label>
                            <input type="password" name="Password" placeholder="Enter Password" class="form-control" id="password-id"/>
                            <span id="passwordicon"></span>
                            <span id="error1" class="text-danger"></span>

                        </div>
                        <div class="form-group mt-4">
                            <input type="submit" value="Login" class="btn btn-primary btn-block" id="id-submit" />
                        </div>
                    </div>
                    @* </form> *@
                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Register","Account")" class="text-decoration-none"><b>Register</b></a>
                    </div>

                   
                    <div class="mt-3 text-center">
                        @if (!string.IsNullOrEmpty(ViewBag.LoginMessage) && ViewBag.LoginMessage== "ERROR: Incorrect username or password.")
                        {
                            <div class="alert alert-danger" role="alert">
                                <p style="color:Red">@ViewBag.LoginMessage</p>
                            </div>                            
                        }
                        
                    </div>

                    <span id="displaymessage"></span>
                </div>
                <div id="baseaddress" data="@ViewBag.hostname"></div>
            </div>      
        </div>
    </div>


   
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script src="~/js/LoginValidation/Loginformvalidation.js"></script>