<!DOCTYPE html>
<html>
<head>
    <title>Master Skill Form</title>


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Users</title>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.1.301/styles/kendo.default-v2.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!-- Include jQuery -->


    <link rel="stylesheet" href="~/css/LocalCssFile/LocalStylesheets.css"/>
    <link rel="stylesheet" href="~/css/MasterPageStyles/SkillMasterForm.css">
</head>


<body>
    
    <div class='ToolbarContainer'>
        @* customized alerts *@
        <div class="alert success submitcustomizedalert">
            <span class="closebtn">&times;</span>
            <strong class="strongclass">Success!</strong><br />
            <p id="errormsg"> Form submitted successfully</p>
        </div>


        
        <h6 id="skillheading"><b>Skill</b></h6>   

        <div>
            <ul class="toolbarul">
                <li class=""><a href="#"><span id='addButton' class='k-icon k-i-plus'></span></a></li>
                <li class="disableicons"><a href="#"><span id='editbutton' class='material-symbols-outlined'>edit</span></a></li>
                <li class="disableicons"><a href="#"><span id='binbutton' class='k-icon k-i-delete'></span></a></li>
                <li class="disableicons"><a href="#"><span id='gridbutton' class='material-icons material-symbols-outlined'>grid_on</span></a></li>
                <li class="refreshli"><a href="#"><span id='Refreshbutton' class='material-icons material-symbols-outlined'>refresh</span></a></li>
            </ul>
        </div>
       

       
        <div class="textbox-container">
            <i id="searchicon" class="material-symbols-outlined">search</i>
            <input type="text" id="searchinput" placeholder="Search">
        </div>
                

        <div class="exportContent">
            <div id="exportbuttoncontainer">
                <button id="ExportId">EXPORT</button>
                <i id="exportIcon" class='material-icons dropdown-icon'>arrow_drop_down</i>
            </div>
            <div id="export_pop">
                <div id="export_banner">
                    <p id="ExportAll">Export to Excel All</p>
                    <p id="ExportSelected">Export to Excel Selected</p>
                </div>
            </div>
        </div>

        @* Delete pop *@
        <div id="DeletemodalId" class="modal">
            <h5 class='Deletepopheading'>Delete Records</h5>

            <div class="modal-content">
                <p>Are you sure to delete this row?</p>
                <div class="modal-footer">
                    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" id="Deleteconfirmbtn">Yes</a>
                    <a href="#!" class="modal-action modal-close waves-effect waves-red btn-flat ">No</a>
                </div>
            </div>
        </div>


        
    </div>




   <div id="grid"></div>

  

    @* Add Pop up *@
   <div id='addModal' class='modal'> 
        <div class='modal-content' id="modal-content-curd">
            
            <br/>

            <h5 class="heading">Skill : Add</h5>
            <div class="alert alert-danger dangeralert" role="alert" style="display:none;">
                <div>
                    <span id="skillerror"></span>
                    <span id="skillicon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>
                <div>
                    <span id="NumberofEmployeeserror"></span>
                    <span id="NumberofEmployeesicon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>

                <div>
                    <span id="SkillNameExistsMsg"></span>
                    <span id="skillExistsIcon" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>
            </div>

            


               

            <div class="ID-item">
                <input type="hidden" id="itemId" value="@ViewBag.ID" />
            </div>

            <div>
                <input type="hidden" id="MasterskillId" value="" />
            </div>
            <div class="Skillitem">
                <label for="inputskillname" class="required"><b>Skill Name:</b></label>
                <input type="text" name="SkillName" placeholder="SkillName" id="inputskillname" style="color: #30619f;" />

                <div>
                    <span id="skillerror"></span>
                    <span id="skillicontxt" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>
            </div>

            <div class="NumberofEmployeesitem">
                <label for="inputNumberofEmployees" class="required"><b>Number of Employees:</b></label>
                <input type="number" name="NumberofEmployees" placeholder="NumberofEmployees" id="inputNumberofEmployees" />
                <div>
                    <span id="NumberofEmployeeserror"></span>
                    <span id="Numbericontxt" class="material-icons material-icons-outlined Iconcolor">error_outline</span>
                </div>
            </div>

            <div class="RatePerHourItem">
                <label for="inputRatePerHour" class="colorclass"><b>Rate Per Hour:</b></label>
                <input type="number" name="RatePerHour" placeholder="RatePerHour" id="inputRatePerHour" />
                <div>
                    <span id="RatePerHourerror"></span>
                    <span id="RatePerHouricon" class="material-symbols-outlined Iconcolor"></span>
                </div>
            </div>

            <div class="RemarkItem">
                <label for="inputNumberofEmployees" class="Remarkclass"><b>Remark:</b></label>
                <textarea name="Remark" placeholder="Remark" id="inputRemark" rows="4" cols="50"></textarea>
            </div>

            <div class="item status">
                <div class="row" id="divisActive">
                <label id="lblactive">
                    <input type="checkbox" id="dummycheckbox" checked/>
                    <span id="spanisActive"></span>
                </label>
                </div>

                <div class="row" id="divisActive">
                    <label id="lblactive">
                        <input type="checkbox" id="IsActiveCheckbox" />
                        <span id="spanisActive"><b>Active</b></span>
                    </label>
                </div>
            </div>   

            

            <div class="buttonitem">
                <input type="button" value="Save" id="submit" />
            </div>

            <div class="buttonitem">
                <input type="button" value="Cancel" id="cancel" />
            </div>

            <div>
                <span id="closebtn" class="material-symbols-outlined">close</span>
            </div>

        </div>
    </div>

    <div id="baseaddress" data="@ViewBag.hostname"></div>
    <input type="hidden" name="mode" value="@ViewBag.Mode" id="modeid" />


</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
<!-- Include Kendo UI -->
<script src="https://kendo.cdn.telerik.com/2022.1.301/js/kendo.all.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script src="~/js/MasterSkillForm/MasterSkillForm.js"></script>